{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
        "@/*": ["./src/*"]
      }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/Footer.jsx", "src/app/(client)/about/page.jsx", "src/app/(client)/blog/page.jsx", "src/app/(client)/blog/[slug]/page.jsx", "src/components/Hero.jsx", "src/components/ClientNavbar.jsx", "src/components/BlogCard.jsx"],
  "exclude": ["node_modules"]
}
